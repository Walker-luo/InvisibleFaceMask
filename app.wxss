/* app.wxss */

/* 整体容器 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background-color: #f5f5f5;
  }
  
  /* 页面标题 */
  .title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
  }
  
  /* 上传图片区域 */
  .upload-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
  }
  
  .preview {
    width: 250px;
    height: 250px;
    border: 1px solid #ddd;
    border-radius: 8px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  
  /* 按钮样式（上传、处理、下载） */
  button {
    background-color: #007aff;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 10px 20px;
    font-size: 16px;
    margin: 5px;
  }
  
  /* 噪声参数调整区域 */
  .settings {
    width: 90%;
    margin: 20px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .slider {
    width: 100%;
    margin-bottom: 10px;
  }
  
  /* 处理按钮区域 */
  .process {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
  }
  
  /* 输出图片展示区域 */
  .output {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .processed-preview {
    width: 250px;
    height: 250px;
    border: 1px solid #ddd;
    border-radius: 8px;
    object-fit: cover;
    margin-bottom: 10px;
  }
  