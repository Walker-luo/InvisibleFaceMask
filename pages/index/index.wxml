<navigation-bar title="DeepFake" back="{{false}}" color="black" background="#FFF"></navigation-bar>

<view class="container">
  

<!-- 图片上传：合并上传与预览区域 -->
    <view class="upload-preview" bindtap="chooseImage">
        <image wx:if="{{imagePath}}" src="{{imagePath}}" class="preview-image"/>
        <view wx:else class="upload-placeholder">
            <text class="upload-text">+ 点击上传图片</text>
            <text class="upload-hint">支持jpg/png格式</text>
        </view>
  </view>

