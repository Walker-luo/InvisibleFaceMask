  <!-- 输出图片 -->
  <view class="output">
    <image src="{{processedImagePath}}" class="processed-preview"/>
      <!-- 合并后的操作按钮 -->
    <view class="action-buttons">
        <button class="process-btn" bindtap="processImage">处理图片</button>
        <button class="download-btn" bindtap="downloadImage">下载图片</button>
    </view>
  </view>

</view>
