/*页面容器 */
.page-container {
    background: linear-gradient(to bottom, #f7f8fa, #ffffff);
    min-height: 100vh;
    padding-top: env(safe-area-inset-top);  /* 替代 statusBarHeight */
    padding-bottom: env(safe-area-inset-bottom); /* 避开底部横条 */
  }


/* 页面标题 */
.title-container {
    display: flex;
    justify-content: center;    /* 让子项在主轴（水平方向）上居中 */
    width: 100%;
    margin-bottom: 30rpx;
    
    font-size: 48rpx;
    font-weight: bold;
    color: #1f2329;
}

/* 为标题图片添加样式 */
.title-image {
    width: 50%; /* 将图片的宽度设置为父容器的50%，您可以按需调整 */
    /* 或者您也可以使用 rpx 单位，例如：width: 400rpx; */
}



    

/* 主体容器 */
.container {
    display: flex;
    flex-direction: column;
    padding: 0 40rpx 40rpx 40rpx; /* 调整内边距，顶部不需要了 */
    box-sizing: border-box;
    width: 100%;
    background-color: transparent; /* 移除背景色 */
  }
  

/* 上传图片区域 */
.upload-container {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 20rpx auto; /* 区域居中 */
    /* 圆角阴影 */
    border-radius: 16rpx;
    box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
    /* --- 毛玻璃效果 --- */
    background: rgba(255, 255, 255, 0.5); /* 白色半透明背景 */
    backdrop-filter: blur(25px);         /* 背景模糊滤镜 */
    -webkit-backdrop-filter: blur(25px);
    /* --- 细节优化 --- */
    border: 1px solid rgba(106, 17, 203, 0.4); /* 柔和的亮色边框 */
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);    /* 更弥散的阴影 */
    transition: all 0.3s ease;
}


.upload-text {
    font-size: 32rpx;
    color: #333;
}

.upload-preview {
    width: 95%; /* 容器宽度为屏幕的90% */
    height: auto; /* 允许高度根据内容自适应增长 */
    min-height: 350rpx; /* 保证即使在特殊情况下也有一个最小高度 */
    margin: 20rpx auto;
    border-radius: 16rpx;
    border: 3rpx dashed rgba(0, 0, 0, 0.2); /* 虚线颜色更淡、更细 */
    /* 内部使用flex布局，让内容（占位符或图片网格）居中 */
    display: flex;
    justify-content: center;
    align-items: center;
    
    padding: 20rpx; /* 内边距，确保图片网格不会紧贴边框 */
    box-sizing: border-box; /* 让padding包含在width内 */
    transition: all 0.3s ease;
}

.preview-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
    grid-gap: 8px; /* 单位改为px */
    max-width: 100%;
}


.preview-item-image {
    width: 100%; /* 关键: 让图片宽度填满它所在的网格列 */
    /* 
     * 关键: 设置宽高比为1:1，即正方形。
     * 结合WXML中已有的 mode="aspectFill"，图片会自动填充这个正方形区域，不会变形。
     * 这是创建统一尺寸网格视图的现代方法。
     */
    aspect-ratio: 1 / 1; 
    border-radius: 12rpx; /* 为图片本身也加上小圆角，视觉效果更佳 */

}

.output-container{
    width: 90%; /* 容器宽度为屏幕的90% */
    height: auto; /* 允许高度根据内容自适应增长 */
    min-height: 400rpx; /* 保证即使在特殊情况下也有一个最小高度 */

    margin: 20rpx auto;
    border-radius: 16rpx;
    border: 2rpx solid #e0e0e0; 
    
    /* 内部使用flex布局，让内容（占位符或图片网格）居中 */
    display: flex;
    justify-content: center;
    align-items: center;

    padding: 20rpx; /* 内边距，确保图片网格不会紧贴边框 */
    box-sizing: border-box; /* 让padding包含在width内 */
    transition: all 0.3s ease;
    /* 圆角阴影 */
    border-radius: 16rpx;
    box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
    /* --- 毛玻璃效果核心代码 --- */
    background: rgba(255, 255, 255, 0.5); /* 白色半透明背景 */
    backdrop-filter: blur(25px);         /* 背景模糊滤镜 */
    -webkit-backdrop-filter: blur(25px);

    /* --- 细节优化 --- */

    border: 1px solid rgba(37, 117, 252, 0.4);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);    /* 更弥散的阴影 */
    transition: all 0.3s ease;
}



/* 图片预览的网格容器 */
.processed-grid,
.preview-grid {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;

    /* 
     * --- 核心修改 2: 使用 gap 并居中对齐 ---
     * justify-content: center; 会让图片在水平方向上居中排列，
     * 这样无论1张、2张还是3张图片，看起来都很美观。
     * gap: 20rpx; 会在图片之间创建 20rpx 的间距，并且不会导致溢出。
     */
    justify-content: center;
    align-items: center; /* 垂直方向也居中 */
    gap: 20rpx;
}

/* 单个预览图片样式 */
.processed-item-image,
.preview-item-image {
    width: 150rpx;  /* 可以适当调整大小以适应容器 */
    height: 150rpx;
    border-radius: 12rpx; 

}


/* 上传占位符 (可以沿用旧的) */
.output-placeholder,
.upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #999;
    /* 确保占位符也能撑满容器 */
    width: 100%;
    height: 100%;
}

.upload-placeholder {
    color: #999;
}
.output-placeholder {
    color: #b0b0b0;
}


.upload-text {
    font-size: 32rpx;
}
.upload-hint {
    font-size: 24rpx;
    margin-top: 10rpx;
}

/* 图片数量提示 (保持不变) */
.image-count-hint {
    font-size: 26rpx;
    color: #888;
    margin-top: 10rpx;
}


.output-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    align-self: flex-start;
    margin-bottom: 20rpx;
}
.output-grid-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.placeholder-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 20rpx;
    opacity: 0.6;
}

.output-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    
    /* 关键：让整个占位符有一个轻微的淡入效果，而不是突然出现 */
    opacity: 0.8; 
    transition: opacity 0.5s ease;
}


/* 占位符文字的美化 */
.placeholder-text {
    font-size: 28rpx;
    font-weight: 300; /* 使用更细的字重 */
    color: #8a8a8e;   /* 一个更柔和的灰色 */
    letter-spacing: 1px; /* ✨ 提升质感的关键：增加字间距 */
}


  /* 按钮区域 */
.action-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 90%;
    margin: 20rpx auto;
    gap: 20rpx;
    /* 此处warning可以忽略 */
  }
  
.action-buttons button {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white !important;
    transition: transform 0.1s ease-out, background 0.2s ease-out;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
  
.process-btn {
    background: linear-gradient(145deg, #07c160, #05a84d) !important;
    color: white;
    border: none;
    /* 关键：添加过渡效果，让 transform 和 box-shadow 的变化更平滑 */
    transition: transform 0.1s ease-out, box-shadow 0.1s ease-out;
}

.download-btn {
    background: linear-gradient(145deg, #1989fa, #066dd9) !important;
    color: white;
    border: none;
    /* 关键：添加过渡效果，让 transform 和 box-shadow 的变化更平滑 */
    transition: transform 0.1s ease-out, box-shadow 0.1s ease-out;
}

/* 按钮按下的激活状态 (需要JS配合) */
.btn-active {
    transform: scale(0.97); /* 按下时轻微缩小 */
    /* 可以通过改变渐变方向或颜色来增加反馈 */
    /* background: linear-gradient(135deg, #069b50, #07c160) !important; */
}

  
  /* 核心间距控制 */
  .usage-doc {
    margin-top: 40rpx;
    padding: 24rpx;
    background-color: rgba(230, 247, 255, 0.5); /* 淡蓝色半透明背景 */
    border-radius: 20rpx;
    border: 1px solid rgba(135, 208, 255, 0.5); /* 对应的淡蓝色边框 */
  }
  
  .doc-title {
    display: block;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #0d78e3; /* 与下载按钮主色调呼应 */
  }
  
  .doc-item {
    margin: 16rpx 0;
    line-height: 1.5;
    font-size: 26rpx;
    color: #333;
    display: flex; /* 为后续添加图标做准备 */
    align-items: center;
}
  
.doc-note {
    margin-top: 20rpx;
    line-height: 1.5;
    font-size: 24rpx;
    color: #888;
}


/* 响应式调整：针对屏幕较小的设备 */
@media (max-width: 500px) {
    .title {
      font-size: 32rpx;
    }
    .upload-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .processed-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .action-buttons button {
      height: 70rpx;
      line-height: 70rpx;
      font-size: 28rpx;
    }
  }
  