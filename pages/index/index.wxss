/* 整体容器 */
.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 30rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
    width: 100%;
  }
  
  /* 页面标题 */
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
/* 上传图片区域 */
.upload-preview {
    /* 这些尺寸将作为没有图片时的“默认”或“初始”尺寸 */
    width: 80%;
    height: 60vh;
    max-height: 500rpx;
    margin: 20rpx auto;
    border: 4rpx dashed #ccc;
    border-radius: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  
    /* 推荐：为宽高变化添加过渡效果，让尺寸变化更平滑 */
    transition: width 0.3s ease-in-out, height 0.3s ease-in-out;
  }
  
  .preview-image {
    /* 让图片填满它的（动态尺寸的）父容器 */
    width: 100%;
    height: 100%;
    border-radius: 12rpx; /* border-radius比父容器略小，效果更好 */
  }
  
  .upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #888;
  }
  .upload-text {
    font-size: 32rpx;
  }
  .upload-hint {
    font-size: 24rpx;
    margin-top: 10rpx;
  }

  
  /* 输出区域 */
  .output {
    width: 90%;
    margin: 30rpx auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 保持单一定义，设定响应高度与统一边距 */
  .processed-preview {
    width: 90%;
    height: 40vh;
    max-height: 400rpx;
    border: 1rpx solid #ddd;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    object-fit: cover;
  }
  

  /* 按钮区域 */
.action-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 90%;
    margin: 0 auto;
    gap: 15rpx;
    /* 此处warning可以忽略 */
  }
  
  .action-buttons button {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white !important;
    transition: all 0.2s ease;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .process-btn {
    background: linear-gradient(145deg, #07c160, #05a84d) !important;
  }
  
  .download-btn {
    background: linear-gradient(145deg, #1989fa, #066dd9) !important;
  }
  
  /* 核心间距控制 */
  .usage-doc {
    margin: 20rpx 0;
    padding: 20rpx;
  }
  
  .doc-title {
    display: block;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #1989fa;
  }
  
  .doc-item,
  .doc-note {
    margin: 12rpx 0;
    line-height: 1.4;
    font-size: 26rpx;
  }
  
  .doc-note {
    color: #999;
    margin-top: 16rpx;
  }
  

/* 响应式调整：针对屏幕较小的设备 */
@media (max-width: 500px) {
    .title {
      font-size: 32rpx;
    }
    .upload-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .processed-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .action-buttons button {
      height: 70rpx;
      line-height: 70rpx;
      font-size: 28rpx;
    }
  }
  