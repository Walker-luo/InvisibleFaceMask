/* 整体容器 */
.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 30rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
    width: 100%;
  }
  
  /* 页面标题 */
/* 页面标题 */
.title {
    /* --- 核心修改 --- */
    width: 100%; /* 关键！让容器宽度撑满屏幕 */
    
    /* 你原有的样式，完全正确，继续保留 */
    text-align: center; /* 在100%宽度的容器内，文本就能实现屏幕居中 */
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
  
    /* 建议添加，这是一个好习惯，可以防止未来的padding或border导致布局溢出 */
    box-sizing: border-box; 
  }
  
/* 上传图片区域 */
/* 新的根容器，方便整体布局 */

.upload-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 上传区域主容器 */

.upload-preview {
    width: 90%; /* 容器宽度为屏幕的90% */
    /* 
     * --- 核心修改 1: 设置初始为正方形 ---
     * aspect-ratio: 1; 会让元素的高度自动等于其宽度，形成一个正方形。
     * 当内容增多时，`height: auto` 会允许它被内容撑开，不再强制为正方形。*/

    height: auto; /* 允许高度根据内容自适应增长 */
    min-height: 350rpx; /* 保证即使在特殊情况下也有一个最小高度 */

    margin: 20rpx auto;
    border-radius: 16rpx;
    border: 4rpx dashed #ccc; /* 虚线边框 */
    
    /* 内部使用flex布局，让内容（占位符或图片网格）居中 */
    display: flex;
    justify-content: center;
    align-items: center;
    
    padding: 20rpx; /* 内边距，确保图片网格不会紧贴边框 */
    box-sizing: border-box; /* 让padding包含在width内 */
    transition: all 0.3s ease;
}


.preview-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
    grid-gap: 8px; /* 单位改为px */
    max-width: 100%;

}


.preview-item-image {
    width: 100%; /* 关键: 让图片宽度填满它所在的网格列 */
    /* 
     * 关键: 设置宽高比为1:1，即正方形。
     * 结合WXML中已有的 mode="aspectFill"，图片会自动填充这个正方形区域，不会变形。
     * 这是创建统一尺寸网格视图的现代方法。
     */
    aspect-ratio: 1 / 1; 
    border-radius: 8rpx; /* 为图片本身也加上小圆角，视觉效果更佳 */
}



.output-container{
    width: 90%; /* 容器宽度为屏幕的90% */
    
    /* 
     * --- 核心修改 1: 设置初始为正方形 ---
     * aspect-ratio: 1; 会让元素的高度自动等于其宽度，形成一个正方形。
     * 当内容增多时，`height: auto` 会允许它被内容撑开，不再强制为正方形。
     */
    /* aspect-ratio: 1;  */
    height: auto; /* 允许高度根据内容自适应增长 */
    min-height: 400rpx; /* 保证即使在特殊情况下也有一个最小高度 */

    margin: 20rpx auto;
    border-radius: 16rpx;
    border: 2rpx solid #e0e0e0; 
    /* 内部使用flex布局，让内容（占位符或图片网格）居中 */
    display: flex;
    justify-content: center;
    align-items: center;
    
    padding: 20rpx; /* 内边距，确保图片网格不会紧贴边框 */
    box-sizing: border-box; /* 让padding包含在width内 */
    transition: all 0.3s ease;
}



/* 图片预览的网格容器 */
.processed-grid,
.preview-grid {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;

    /* 
     * --- 核心修改 2: 使用 gap 并居中对齐 ---
     * justify-content: center; 会让图片在水平方向上居中排列，
     * 这样无论1张、2张还是3张图片，看起来都很美观。
     * gap: 20rpx; 会在图片之间创建 20rpx 的间距，并且不会导致溢出。
     */
    justify-content: center;
    align-items: center; /* 垂直方向也居中 */
    gap: 20rpx;
}

/* 单个预览图片样式 */
.processed-item-image,
.preview-item-image {
    width: 180rpx;  /* 可以适当调整大小以适应容器 */
    height: 180rpx;
    border-radius: 12rpx;
}

/* 上传占位符 (可以沿用旧的) */
.output-placeholder,
.upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #999;
    /* 确保占位符也能撑满容器 */
    width: 100%;
    height: 100%;
}

.upload-placeholder {
    color: #999;
}
.output-placeholder {
    color: #b0b0b0;
}


.upload-text {
    font-size: 32rpx;
}
.upload-hint {
    font-size: 24rpx;
    margin-top: 10rpx;
}

/* 图片数量提示 (保持不变) */
.image-count-hint {
    font-size: 26rpx;
    color: #888;
    margin-top: 10rpx;
}


.output-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    align-self: flex-start;
    margin-bottom: 20rpx;
}
.output-grid-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}



.placeholder-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 20rpx;
    opacity: 0.6;
}
.placeholder-text {
    font-size: 28rpx;
}




  /* 按钮区域 */
.action-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 90%;
    margin: 20rpx auto;
    gap: 20rpx;
    /* 此处warning可以忽略 */
  }
  
  .action-buttons button {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white !important;
    transition: all 0.2s ease;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .process-btn {
    background: linear-gradient(145deg, #07c160, #05a84d) !important;
  }
  
  .download-btn {
    background: linear-gradient(145deg, #1989fa, #066dd9) !important;
  }
  
  /* 核心间距控制 */
  .usage-doc {
    margin: 20rpx 0;
    padding: 20rpx;
  }
  
  .doc-title {
    display: block;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #1989fa;
  }
  
  .doc-item,
  .doc-note {
    margin: 12rpx 0;
    line-height: 1.4;
    font-size: 26rpx;
  }
  
  .doc-note {
    color: #999;
    margin-top: 16rpx;
  }
  

/* 响应式调整：针对屏幕较小的设备 */
@media (max-width: 500px) {
    .title {
      font-size: 32rpx;
    }
    .upload-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .processed-preview {
      height: 40vh;
      max-height: 300rpx;
    }
    .action-buttons button {
      height: 70rpx;
      line-height: 70rpx;
      font-size: 28rpx;
    }
  }
  