/* 容器布局 */
.container {
    padding: 20rpx;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  /* 对比展示区 */
  .comparison-box {
    display: flex;
    justify-content: space-around;
    padding: 30rpx;
  }
  
  .image-card {
    width: 45%;
    background: white;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .preview-image {
    width: 100%;
    height: 400rpx;
    border-radius: 16rpx 16rpx 0 0;
  }
  
  .download-btn {
    margin: 20rpx;
    font-size: 28rpx;
    color: #07C160;
  }