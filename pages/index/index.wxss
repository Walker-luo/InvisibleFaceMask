/* 父容器 */
.action-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    column-gap: 20rpx; /* 现代浏览器支持 */
  }
  
  /* 按钮通用样式 */
  .action-buttons button {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1; /* 关键调整项 */
    height: 100rpx;
    font-size: 32rpx;
    border-radius: 16rpx;
    box-sizing: border-box;
    margin-right: 10rpx; /* 兼容旧版 */
  }
  

  .process-btn, .download-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-radius: 12rpx;
    color: white !important; /* 确保文字始终白色 */
    transition: all 0.2s ease;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .process-btn {
    background: #07c160 linear-gradient(145deg, #07c160, #05a84d) !important;
  }
  
  .download-btn {
    background: #1989fa linear-gradient(145deg, #1989fa, #066dd9) !important;
  }

/* 核心间距控制 */
.usage-doc {
    margin: 20rpx 0;  /* 控制整体外间距 [7](@ref) */
    padding: 20rpx;
  }
  
  .doc-title {
    display: block;
    margin-bottom: 10rpx;  /* 标题与内容间距 */
    font-size: 28rpx;
    color: #1989fa;
  }
  
  .doc-item, .doc-note {
    margin: 12rpx 0;  /* 每个要点上下间距 [4,7](@ref) */
    line-height: 1.4;  /* 压缩行高 [1,6](@ref) */
    font-size: 26rpx;
  }
  
  .doc-note {
    color: #999;
    margin-top: 16rpx;  /* 备注特殊间距 */
  }




  
