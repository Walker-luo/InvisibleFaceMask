

.page-container {
    background: linear-gradient(to bottom, #f7f8fa, #ffffff);
    height: 100vh; /* 关键一：让最外层容器的高度等于屏幕视口的高度 */
    display: flex; /* 关键二：使用 flex 布局 */
    flex-direction: column; /* 设置主轴为垂直方向 */
    overflow: hidden; /* 防止最外层容器自己滚动 */
    padding-top: env(safe-area-inset-top);  /* 替代 statusBarHeight */
    padding-bottom: env(safe-area-inset-bottom); /* 避开底部横条 */
  }



/* 步骤标题 */
.title-container {
    display: flex;
    justify-content: center;    /* 让子项在主轴（水平方向）上居中 */
    width: 100%;
    margin-bottom: 30rpx;
    font-size: 48rpx;
    font-weight: bold;
    color: #1f2329;
}

/* 为标题图片添加样式 */
.title-image {
    width: 50%; 
}


.scroll-container {
    flex: 1; /* 让滚动容器占据所有剩余的垂直空间 */
    overflow-y: auto; /* 在网页端或模拟器中，这可以帮助显示滚动条 */
}


/* 主体容器 */
.container {
    display: flex;
    flex-direction: column;
    padding: 0 40rpx 40rpx 40rpx; /* 调整内边距，顶部不需要了 */
    box-sizing: border-box;
    width: 100%;
    background-color: transparent; /* 移除背景色 */
  }
  


/* 智能上传框 */
.upload-container {
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 20rpx auto; /* 区域居中 */
    /* 圆角阴影 */
    border-radius: 16rpx;
    box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
    /* --- 毛玻璃效果 --- */
    background: rgba(255, 255, 255, 0.5); /* 白色半透明背景 */
    backdrop-filter: blur(25px);         /* 背景模糊滤镜 */
    -webkit-backdrop-filter: blur(25px);
    /* --- 细节优化 --- */
    border: 1px solid rgba(106, 17, 203, 0.4); /* 柔和的亮色边框 */
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);    /* 更弥散的阴影 */
    transition: all 0.3s ease;
}

.smart-upload-box {
    width: 95%; /* 容器宽度为屏幕的90% */
    height: auto; /* 允许高度根据内容自适应增长 */
    min-height: 400rpx; /* 保证即使在特殊情况下也有一个最小高度 */
    margin: 20rpx auto;
    border-radius: 16rpx;
    border: 3rpx dashed rgba(0, 0, 0, 0.2); /* 虚线颜色更淡、更细 */
    /* 内部使用flex布局，让内容（占位符或图片网格）居中 */
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx; /* 内边距，确保图片网格不会紧贴边框 */

    box-sizing: border-box; /* 让padding包含在width内 */
    transition: all 0.3s ease;



}

.smart-upload-bg-image {
    /* 关键3: 设置为绝对定位 */
    position: absolute;
    width: 70%;
    height: 70%;
    margin-bottom: 20rpx;
    z-index: -1;
    opacity: 0.3; /* 设置为 20% 的透明度，您可以根据需要调整 */
}

.preview-wrapper {
    margin-top: 10rpx;
    padding: 10rpx;
    background-color: #f7f7f7;
    border-radius: 10rpx;
  }

  /* --- 九宫格布局核心样式 --- */
.preview-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
  }

  /* 网格中的每一项 */
.preview-item {
    /* 关键3: 设置宽高比为1:1，使其成为一个正方形 */
    aspect-ratio: 1 / 1; 
    border-radius: 8rpx;
    /* 如果图片本身没有圆角，这可以确保图片被裁剪为圆角 */
    overflow: hidden; 
  }
  
  /* 图片样式 */
  .preview-item-image {
    /* 关键4: 让图片完全填满它的正方形父容器 */
    width: 100%;
    height: 100%;
  }

.upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* 确保占位符也能撑满容器 */
    width: 100%;
    height: 100%;
}


.upload-text {
    font-size: 40rpx;
    margin-top: 10rpx;
    font-weight: bold;
}

.upload-hint {
    font-size: 24rpx;
    margin-top: 10rpx;
    /* color: rgb(8, 81, 218); */
}



/* 预览标题 */
.preview-title {
    display: block;
    font-size: 26rpx;
    color: #555;
    margin-bottom: 20rpx;
    text-align: center;
}

/* 动画的容器，负责将图标和文字垂直居中 */
.processing-placeholder {
    display: flex;
    flex-direction: column; /* 垂直排列 */
    justify-content: center; /* 垂直居中 */
    align-items: center; /* 水平居中 */
    width: 100%;
    height: 100%; /* 占满父容器的高度，确保居中效果 */
  }
  
  /* 旋转图标的样式和动画绑定 */
  .processing-icon {
    width: 80rpx; /* 图标的宽度 */
    height: 80rpx; /* 图标的高度 */
    animation: spin 1.5s linear infinite;
  }
  
  /* 加载文字的样式 */
  .processing-text {
    margin-top: 20rpx; /* 与上方图标的间距 */
    font-size: 28rpx;
    color: #f30808; /* 白色文字，适合深色背景 */
    letter-spacing: 1px; /* 轻微增加字间距，提升质感 */
  }
  
  
  /* 动画的关键帧定义 */
  /* 定义了一个名为 "spin" 的动画 */
  @keyframes spin{
    /* 动画开始时，旋转0度 */
    from {
      transform: rotate(0deg);
    }
    /* 动画结束时，旋转360度 */
    to {
      transform: rotate(360deg);
    }
  }




/* 1. 容器样式  */
.result-actions {
    width: 95%; /* 容器宽度 */
    max-width: 690rpx;
    margin-top: 20px; /* 与上方区域的间距 */
    background-color: #f7f8fa; /* 使用参考的背景色 */
    border-radius: 16rpx; /* 使用参考的圆角 */
    overflow: hidden; /* 防止内部元素溢出圆角边界 */
  }
  
  /* 2. 按钮样式 (参考 .checkbox-item) */
  .action-btn {
    /* 布局：使用 flex 让图标和文字水平对齐 */
    display: flex;
    align-items: center; /* 垂直居中 */
    width: 100%;
    
    /* 外观：重置默认按钮样式，使其看起来像列表项 */
    background-color: transparent;
    border: none; /* 去掉默认边框 */
    padding: 24rpx 20rpx; /* 设置内边距，参考 .checkbox-item */
    text-align: left; /* 文字左对齐 */
    line-height: 1.5; /* 保证行高一致性 */
    border-radius: 0; /* 按钮自身不需要圆角 */
  }
  
  
  /* 4. 在列表项之间添加分割线 */
  .action-btn:not(:last-child) {
    border-bottom: 1rpx solid #ebedf0; /* 细微的分割线 */
  }
  
  /* 5. 图标样式 (参考 .checkbox-icon) */
  .btn-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 24rpx; /* 图标和文字之间的右边距 */
  }
  
  /* 6. 文本标签样式 (参考 .checkbox-label) */
  .btn-label {
    flex: 1; /* 占据所有剩余空间，让布局更稳定 */
    font-size: 30rpx;
    color: #4A4A4A;
    letter-spacing: 1rpx;
  }
  
  /* 7. 为按钮的禁用状态添加样式 */
.action-btn[disabled] {
    /* 重置背景色，因为小程序会给 disabled 按钮一个默认的灰色背景 */
    background-color: transparent !important; 
  }
.action-btn[disabled] .btn-icon,
.action-btn[disabled] .btn-label {
    opacity: 0.4; /* 让图标和文字变灰，表示不可用 */
  }
  
  /* 8. 点击反馈效果 */
.action-btn:active {
    background-color: #e8e8e8; /* 添加一个简单的点击态背景色 */
  }


